{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "plugins": [{ "name": "next" }],
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@components/*": ["./components/*"],
      "@styles/*": ["styles/*"],
      "@wrappers/*": ["wrappers/*"],
      "@lib/*": ["./lib/*"],
      "@typez/*": ["types/*"],
      "@services/*": ["./services/*"]
    }
  },
  "include": ["next-env.d.ts", "types/globals.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "electron"],
  "exclude": ["node_modules"]
}
